<?xml version="1.0" encoding="utf-8"?>
<Package xmlns="http://schemas.microsoft.com/appx/2010/manifest">
  
  <Identity Name="Embarcadero.SampleWinrt"
            Publisher="CN=tgerdes"
            Version="1.0.0.0" />
  
  <Properties>
    <DisplayName>SampleWinrt</DisplayName>
    <PublisherDisplayName>Thom Gerdes</PublisherDisplayName>
    <Description>Sample Winrt app</Description>
    <Logo>Logo.png</Logo>
  </Properties>
  
  <Prerequisites>
    <OSMinVersion>6.2</OSMinVersion>
    <OSMaxVersionTested>6.2</OSMaxVersionTested>
  </Prerequisites>
  
  <Resources>
    <Resource Language="en-us"/>
  </Resources>
  
  <Applications>
    <Application Id="SampleWinRt"
        Executable="SampleWinrt.exe"
        EntryPoint="SampleWinrt.App">
        <VisualElements
            Logo="Logo.png"
            SmallLogo="SmallLogo.png"
            DisplayName="Sample Winrt"
            Description="Sample Winrt App built in Delphi"
            ForegroundText="light"
            BackgroundColor="#222222">
            <SplashScreen BackgroundColor="black" Image="SplashScreen.png" />
        </VisualElements>
    </Application>
  </Applications>
</Package>

